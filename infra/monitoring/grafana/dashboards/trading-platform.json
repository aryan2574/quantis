{
  "dashboard": {
    "id": null,
    "title": "Quantis Trading Platform",
    "tags": ["trading", "quantis"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Order Processing Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(spring_kafka_listener_seconds_count{topic=\"orders\"}[5m])",
            "legendFormat": "Orders/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 80
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Trade Execution Latency",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(spring_kafka_listener_seconds_bucket{topic=\"trades.out\"}[5m]))",
            "legendFormat": "95th percentile"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Service Health Status",
        "type": "table",
        "targets": [
          {
            "expr": "up{job=~\"order-ingress|risk-service|portfolio-service|trading-engine\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Market Data Updates",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(spring_kafka_producer_record_send_total{topic=\"market.data\"}[5m])",
            "legendFormat": "Market Data Updates/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Risk Rejection Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(spring_kafka_producer_record_send_total{topic=\"orders.rejected\"}[5m]) / rate(spring_kafka_listener_seconds_count{topic=\"orders\"}[5m]) * 100",
            "legendFormat": "Rejection Rate %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{area=\"heap\"}",
            "legendFormat": "{{job}} - {{area}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
